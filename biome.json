{
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineWidth": 120,
    "enabled": true
  },
  "files": {
    "ignore": [
      ".next/*",
      ".node_modules/*"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      },
      "a11y": {
        "useValidAnchor": "off",
        "useKeyWithClickEvents": "off"
      }
    }
  }
}