{
  "$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "indentSize": 2,
    "indentStyle": "space",
    "formatWithErrors": true,
    "lineWidth": 120,
    "enabled": true
  },
  "files": {
    "ignore": [".next/*", ".node_modules/*"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
